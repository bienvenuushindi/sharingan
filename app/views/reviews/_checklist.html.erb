<%= turbo_frame_tag "reviews" do %>
  <% if @list.present? %>
    <div class="grid grid-cols-1 mx-3 shadow-lg py-2 border my-2 py-3 px-2">
      <h3 class="text-2xl text-blue-600">Project Requirements</h3>
      <% @list.each_with_index do |item, id| %>
        <div class="collection-check-box w-fit border-b w-full flex gap-2 items-baseline  py-2 px-2" data-controller="admin" data-turbo_action="advance" data-turbo_frame="changes">
          <input id="article_category_ids_<%= item.id %>" data-url="/review/<%= item.id %>" name="article[category_ids][]" data-origin="changes" type="checkbox" checked="checked" value="<%= item.id %>" data-action="input->admin#checklist" data-admin-target="category"/>
          <div class="article_category_ids_<%= item.id %>"> <%= sanitize markdown(item.title) %></div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="grid grid-cols-1 mx-3 shadow-lg py-2 border my-2 py-3 px-2">
      <h3 class="text-2xl text-blue-600 pl-2">Please select a project to see requirements </h3>
      <%= render 'partials/preview' %>
    </div>
  <% end %>
<% end %>