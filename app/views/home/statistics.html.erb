<div class="flex justify-around w-screen">
  <div>
    <h2 class="text-center my-5 font-bold text-4xl">Users</h2>
    <table class="table-auto">
      <thead>
      <tr>
        <th class="border-b dark:border-slate-600 font-medium py-4 pl-2 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Id</th>
        <th class="border-b dark:border-slate-600 font-medium py-4 pl-2 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">email</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <%= render "home/user", user: %>
      <% end %>
      </tbody>
    </table>
  </div>
  <div>
    <h2 class="text-center my-5 font-bold text-4xl">Articles</h2>
    <table class="table-auto">
      <thead>
      <tr>
        <th class="border-b dark:border-slate-600 font-medium py-4 pl-2 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Id</th>
        <th class="border-b dark:border-slate-600 font-medium py-4 pl-2 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Title</th>
        <th class="border-b dark:border-slate-600 font-medium py-4 pl-2 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Author</th>
        <th class="border-b dark:border-slate-600 font-medium py-4 pl-2 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">Visited</th>
      </tr>
      </thead>
      <tbody>
      <% @articles.each do |article| %>
        <%= render "home/article", article: %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>