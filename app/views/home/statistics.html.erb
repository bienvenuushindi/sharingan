<div class="flex flex-col lg:flex-row gap-3 px-2 mt-6 ">
  <div class="w-full lg:w-1/4  ">
    <h3 class="border flex items-center gap-2 text-blue-600  font-semibold text-2xl py-2 pl-3 rounded-t">
      <div class="flex relative bg-blue-500 justify-center items-center w-4 h-4 mt-1 rounded-full ">
      </div>
      Users
    </h3>
    <table class="table-auto border w-full">
      <thead>
      <tr class="border-b">
        <th class="font-bold py-2 pl-2 pb-3 text-blue-400  text-left"></th>
        <th class="font-bold py-2 pl-2 pb-3 text-blue-400  text-left">email</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <%= render "home/user", user: %>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="w-full lg:w-3/4 ">
    <h3 class="border flex items-center gap-2 text-blue-600  font-semibold text-2xl py-2 pl-3 rounded-t">
      <div class="flex relative bg-blue-500 justify-center items-center w-4 h-4 mt-1 rounded-full ">
      </div>
      Most Read
    </h3>
    <table class="table-auto w-full border">
      <thead>
      <tr class="border-b">
        <th class="font-bold py-2 pl-2 pb-3 text-blue-400  text-left"></th>
        <th class="font-bold py-2 pl-2 pb-3 text-blue-400  text-left">Title</th>
        <th class="font-bold py-2 pl-2 pb-3 text-blue-400  text-left">Author</th>
        <th class="font-bold py-2 pl-2 pb-3 text-blue-400  text-left">Visited</th>
      </tr>
      </thead>
      <tbody>
      <% @articles.each do |article| %>
        <%= render "home/article", article: %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>