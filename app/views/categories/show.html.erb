<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div class="border-b flex flex-col gap-3 pb-3 font-bold">
      <span class=" text-blue-600">Name: </span> <%= @category.name %>
    </div>
    <% if can? :update, @category %>
      <%= link_to 'Edit this category', edit_category_path(@category), class: "mt-2 rounded-lg py-1 px-3 bg-gray-100 inline-block font-medium" %>
    <% end %>
    <% if can? :destroy, @category %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this category', category_path(@category), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this category?" } }, class: "mt-2 rounded-lg py-1 px-3 bg-gray-100 font-medium" %>
      </div>
    <% end %>
    <%= link_to 'Back to categories', categories_path, class: "ml-2 rounded-lg py-1 px-3 bg-gray-100 inline-block font-medium" %>
    <div id="articles" class="min-w-full grid">
      <%= render @category.articles %>
    </div>
  </div>

</div>
