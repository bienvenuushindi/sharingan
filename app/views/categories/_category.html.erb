<div id="<%= dom_id category %>">
  <div class=" flex flex-col gap-3 pb-3 font-bold">
    <span class=" text-blue-600">Name: </span>  <%= category.name %>
  </div>
  <div>
    <% if can? :manage, @category %>
      <% if action_name != "show" %>
        <%= link_to "Show", category, class: "rounded-lg py-1 px-3 bg-gray-100 inline-block font-medium" %>
        <%= link_to 'Edit', edit_category_path(category), class: "rounded-lg py-1 px-3 bg-gray-100 inline-block font-medium" %>
        <hr class="mt-6">
      <% end %>
    <% end %>
  </div>

</div>
